<Window x:Class="Stock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pu ="clr-namespace:Panuon.UI;assembly=Panuon.UI"
        xmlns:local="clr-namespace:Stock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <pu:PUButton Click="PUButton_Click" Height="40" Width="80" Content="开始"></pu:PUButton>
        <pu:PUTextBox Name="Now_Code" Width="100" Height="40" Margin="300,0,0,0" Background="Black" Foreground="White"></pu:PUTextBox>
        <pu:PUProgressBar Name="progress1" Grid.Row="1" Percent="0" Width="800"></pu:PUProgressBar>
        <pu:PUProgressBar Name="progress2" Grid.Row="2" Percent="0" Width="800"></pu:PUProgressBar>
    </Grid>
</Window>
